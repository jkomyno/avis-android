<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/card_view"
    android:layout_width="match_parent"
    android:layout_height="125dp"
    android:layout_marginBottom="@dimen/cardMarginVertical"
    android:layout_marginLeft="@dimen/cardMarginHorizontal"
    android:layout_marginRight="@dimen/cardMarginHorizontal"
    android:layout_marginTop="@dimen/cardMarginVertical"
    app:cardCornerRadius="3dp"
    app:cardElevation="3dp"
    app:cardPreventCornerOverlap="false"
    app:contentPadding="0dp">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/container"
        android:background="@color/colorAccent">

        <ImageView
            android:id="@+id/prenotazioni_art"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_centerVertical="true"
            android:layout_marginLeft="24dp"
            android:contentDescription="oiun" />

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@+id/prenotazioni_art"
            android:layout_centerVertical="true"
            android:layout_marginLeft="24dp">

            <TextView
                android:id="@+id/card_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:singleLine="true"
                android:text="Radio Number One"
                android:textAppearance="?android:attr/textAppearanceLarge"
                android:textColor="@color/textPrimary" />

            <TextView
                android:id="@+id/description"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignLeft="@+id/card_title"
                android:layout_below="@+id/card_title"
                android:layout_marginTop="8dp"
                android:text="Questa sezione è dedicata alla prenotazione sul portale di AVIS San Donà"
                android:textColor="@color/textSecondary" />

        </RelativeLayout>

    </RelativeLayout>

</android.support.v7.widget.CardView>